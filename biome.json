{
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "src/**",
      "README.md",
      "biome.json",
      "package.json",
      "next.config.ts",
      "tailwind.config.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5"
    }
  }
}
